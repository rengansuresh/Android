<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:onClick="onNumberClick">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"

        tools:context="com.androidapp.calculator.MainActivity"
        tools:showIn="@layout/activity_main">

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/gridLayout"

            android:layout_marginBottom="40dp"
            android:layout_below="@+id/display"
            android:layout_alignParentStart="true">
            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:id="@+id/buttonMC"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_gravity="fill_vertical"
                android:backgroundTint="#ebe9e9"
                android:text="MC"
                android:onClick="onClear"
                android:gravity="center"
                android:textAlignment="center" />
            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:id="@+id/buttonSqrt"
                android:layout_row="3"
                android:layout_column="4"
                android:layout_gravity="fill_vertical"
                android:backgroundTint="#ebe9e9"
                android:text="sqrt"
                android:onClick="onClear"
                android:gravity="center"
                android:textAlignment="center" />
            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="70dp"
                android:layout_height="80dp"
                android:id="@+id/buttonPercent"
                android:layout_row="4"
                android:layout_column="4"
                android:layout_gravity="fill_vertical"
                android:backgroundTint="#ebe9e9"
                android:text="%"
                android:onClick="onNumberClick"
                android:gravity="center"
                android:textAlignment="center" />
            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="70dp"
                android:layout_height="80dp"
                android:id="@+id/buttonOneby"
                android:layout_row="5"
                android:layout_column="1"
                android:layout_gravity="fill_vertical"
                android:backgroundTint="#ebe9e9"
                android:text="1/x"
                android:gravity="center"
                android:textAlignment="center" />
            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="140dp"
                android:layout_height="80dp"
                android:id="@+id/buttonHistory"
                android:layout_row="6"
                android:layout_column="0"
                android:layout_gravity="fill_vertical"
                android:layout_columnSpan="2"
                android:backgroundTint="#ebe9e9"
                android:text="History"
                android:onClick="onClear"
                android:gravity="center"
                android:textAlignment="center" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="140dp"
                android:layout_height="80dp"
                android:id="@+id/buttonNegate"
                android:layout_row="6"
                android:layout_column="2"
                android:layout_gravity="fill_vertical"
                android:layout_columnSpan="2"
                android:backgroundTint="#ebe9e9"
                android:text="+/-"
                android:onClick="onClear"
                android:gravity="center"
                android:textAlignment="center" />
            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="70dp"
                android:layout_height="80dp"
                android:id="@+id/buttonMR"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_gravity="fill_vertical"
                android:backgroundTint="#ebe9e9"
                android:text="MR"
                android:onClick="onClear"
                android:gravity="center"
                android:textAlignment="center" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="70dp"
                android:layout_height="80dp"
                android:id="@+id/buttonMS"
                android:layout_row="0"
                android:layout_column="2"
                android:layout_gravity="fill_vertical"
                android:backgroundTint="#ebe9e9"
                android:text="MS"
                android:onClick="onClear"
                android:gravity="center"
                android:textAlignment="center" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="70dp"
                android:layout_height="80dp"
                android:id="@+id/buttonMplus"
                android:layout_row="0"
                android:layout_column="3"
                android:layout_gravity="fill_vertical"
                android:backgroundTint="#ebe9e9"
                android:text="M+"
                android:onClick="onClear"
                android:gravity="center"
                android:textAlignment="center" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="70dp"
                android:layout_height="80dp"
                android:id="@+id/buttonMminus"
                android:layout_row="0"
                android:layout_column="4"
                android:layout_gravity="fill_vertical"
                android:backgroundTint="#ebe9e9"
                android:text="M-"
                android:onClick="onClear"
                android:gravity="center"
                android:textAlignment="center" />



            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="70dp"
                android:layout_height="80dp"
                android:id="@+id/button7"
                android:layout_row="2"
                android:layout_column="0"
                android:layout_gravity="fill_horizontal"
                android:backgroundTint="#ebe9e9"
                android:onClick="onNumberClick"
                android:text="7" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="70dp"
                android:onClick="onNumberClick"
                android:layout_height="80dp"
                android:id="@+id/button9"
                android:layout_row="2"
                android:layout_column="2"
                android:layout_gravity="fill_horizontal"
                android:backgroundTint="#ebe9e9"
                android:text="@string/button9" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="70dp"
                android:layout_height="80dp"
                android:id="@+id/buttonC"
                android:layout_row="2"
                android:layout_column="4"
                android:layout_gravity="fill_vertical"
                android:backgroundTint="#ebe9e9"
                android:text="@string/buttonC"
                android:onClick="onClear"
                android:gravity="center"
                android:textAlignment="center" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="70dp"
                android:layout_height="80dp"
                android:onClick="onNumberClick"
                android:id="@+id/button4"
                android:layout_row="3"
                android:backgroundTint="#ebe9e9"
                android:layout_column="0"
                android:text="@string/button4" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="70dp"
                android:layout_height="80dp"
                android:onClick="onNumberClick"
                android:id="@+id/button8"
                android:layout_row="2"
                android:layout_column="1"
                android:layout_gravity="fill_horizontal|top"
                android:backgroundTint="#ebe9e9"
                android:text="@string/button8" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="70dp"
                android:layout_height="80dp"
                android:id="@+id/buttonDivide"
                android:layout_row="2"
                android:layout_column="3"
                android:backgroundTint="#ebe9e9"
                android:layout_gravity="fill_horizontal"
                android:text="@string/buttonDivide"
                android:onClick="onNumberClick" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="70dp"
                android:layout_height="80dp"
                android:onClick="onNumberClick"
                android:id="@+id/button1"
                android:layout_row="4"
                android:layout_column="0"
                android:backgroundTint="#ebe9e9"
                android:layout_columnSpan="1"
                android:text="@string/button1" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="70dp"
                android:layout_height="80dp"
                android:id="@+id/button5"
                android:onClick="onNumberClick"
                android:layout_row="3"
                android:backgroundTint="#ebe9e9"
                android:layout_column="1"
                android:text="@string/button5" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="70dp"
                android:layout_height="80dp"
                android:id="@+id/button6"
                android:layout_row="3"
                android:onClick="onNumberClick"
                android:backgroundTint="#ebe9e9"
                android:layout_column="2"
                android:text="@string/button6" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="70dp"
                android:layout_height="80dp"
                android:id="@+id/buttonMultiply"
                android:layout_row="3"
                android:backgroundTint="#ebe9e9"
                android:layout_column="3"
                android:text="@string/buttonMul"
                android:onClick="onNumberClick" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="70dp"
                android:layout_height="80dp"
                android:id="@+id/button0"
                android:layout_row="5"
                android:onClick="onNumberClick"
                android:layout_column="0"
                android:layout_columnSpan="1"
                android:backgroundTint="#ebe9e9"
                android:layout_gravity="fill_horizontal"
                android:text="@string/button0" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="70dp"
                android:layout_height="80dp"
                android:id="@+id/button2"
                android:layout_row="4"
                android:onClick="onNumberClick"
                android:backgroundTint="#ebe9e9"
                android:layout_column="1"
                android:text="@string/button2" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="70dp"
                android:layout_height="80dp"
                android:id="@+id/button3"
                android:layout_row="4"
                android:backgroundTint="#ebe9e9"
                android:layout_column="2"
                android:text="@string/button3"
                android:onClick="onNumberClick" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="70dp"
                android:layout_height="80dp"
                android:id="@+id/buttonSub"
                android:layout_row="4"
                android:backgroundTint="#ebe9e9"
                android:layout_column="3"
                android:text="@string/buttonSub"
                android:onClick="onNumberClick" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="70dp"
                android:layout_height="80dp"
                android:id="@+id/buttonEquals"
                android:layout_row="5"
                android:layout_column="4"
                android:backgroundTint="#ebe9e9"
                android:layout_gravity="fill_vertical"
                android:text="@string/buttonEquals"
                android:onClick="onEquals"
                android:gravity="center"
                android:textAlignment="center" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="70dp"
                android:layout_height="80dp"
                android:id="@+id/buttonDecimal"
                android:layout_row="5"
                android:layout_column="2"
                android:backgroundTint="#ebe9e9"
                android:text="."
                android:onClick="onNumberClick" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="70dp"
                android:layout_height="80dp"
                android:id="@+id/buttonAdd"
                android:layout_row="5"
                android:backgroundTint="#ebe9e9"
                android:layout_column="3"
                android:text="@string/buttonAdd"
                android:onClick="onNumberClick" />
            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="70dp"
                android:layout_height="80dp"
                android:id="@+id/buttonBackspace"
                android:layout_row="6"
                android:layout_column="4"
                android:layout_gravity="fill_vertical"
                android:backgroundTint="#ebe9e9"
                android:text="Del"
                android:onClick="onClear"
                android:gravity="center"
                android:textAlignment="center" />

        </GridLayout>

        <android.inputmethodservice.ExtractEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/display"
            android:text="@string/display"
            android:textAlignment="viewEnd"
            android:layout_below="@+id/memdisplay"
            android:layout_centerHorizontal="true" />

        <android.inputmethodservice.ExtractEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/memdisplay"

            android:layout_marginTop="50dp"
            android:textAlignment="viewEnd"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>
</ScrollView>